[alias]
    a = add
    ap = add --patch

    c  = clean -xdf
    cn = clean -xdfn

    cim  = commit -m
    cia  = commit --amend
    cian = commit --amend --no-edit

    d   = diff
    dw  = diff --word-diff
    ds  = diff --staged
    dsw = diff --staged --word-diff
    dt  = difftool

    f   = fetch
    fa  = fetch --all
    fap = fetch --all --prune

    fixup = commit --fixup

    ignore   = update-index --skip-worktree
    ignored  = !git ls-files -v . | findstr "^S"
    unignore = update-index --no-skip-worktree

    lg = log --oneline --max-count=30 --decorate --exclude=refs/stash --graph
    ll = log --oneline --max-count=50 --decorate --exclude=refs/stash

    mt = mergetool

    r = restore
    rp = restore --patch
    rs = restore --staged

    s = status
    ss = status --short

    smu  = submodule update --init
    smur = submodule update --init --recursive

    sw = switch
